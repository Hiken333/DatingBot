<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="4" author="buhlo">
        <createTable tableName="likes">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_like_from_user" 
                    references="users(id)" deleteCascade="true"/>
            </column>
            <column name="to_user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_like_to_user" 
                    references="users(id)" deleteCascade="true"/>
            </column>
            <column name="message" type="VARCHAR(500)"/>
            <column name="is_super_like" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint 
            tableName="likes"
            columnNames="from_user_id, to_user_id"
            constraintName="uk_like_from_to"/>

        <createIndex tableName="likes" indexName="idx_from_user">
            <column name="from_user_id"/>
        </createIndex>

        <createIndex tableName="likes" indexName="idx_to_user">
            <column name="to_user_id"/>
        </createIndex>

        <createIndex tableName="likes" indexName="idx_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

